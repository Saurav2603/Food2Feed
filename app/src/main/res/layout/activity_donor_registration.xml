<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:clipToPadding="true"
    tools:context=".DonorRegistration">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:text="Create Account"
        android:textColor="#213AE4"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:text="Create a new account"
        android:textColor="#252424"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="133dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:srcCompat="@drawable/logocircle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="FullName"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_name_donor"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/ic_person"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#100F0F" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_donor"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:text="Mobile No"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Mobile_no_donor"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/ic_phone"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#131313" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mobile_no_donor"
        android:layout_marginStart="30dp"

        android:layout_marginBottom="10dp"
        android:text="Email Id"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_donor"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:hint="Enter Valid Email id"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#131313" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_donor"
        android:layout_marginStart="30dp"

        android:layout_marginBottom="10dp"
        android:text="Password"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pass1_donor"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/ic_security"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass1_donor"
        android:layout_marginStart="30dp"

        android:layout_marginBottom="10dp"
        android:text="Confirm Password"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pass2_donor"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView12"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/ic_security"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_donor_reg"
        android:layout_width="214dp"
        android:layout_height="57dp"
        android:layout_below="@id/pass2_donor"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="submit" />

    <TextView
        android:id="@+id/login_txt_donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_donor_reg"

        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/textView11"
        android:clickable="true"

        android:text="Login now"
        android:textColor="#2A4AF1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_donor_reg"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="16dp"
        android:text="Already have an account?"
        android:textColor="#4A4444"

        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>