<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ui.home.Donate">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Details"
        android:layout_marginTop="10dp"
        android:textColor="#121111"
        android:textSize="30sp"
        android:textStyle="bold"

        tools:layout_editor_absoluteY="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Type"
        android:layout_marginTop="12dp"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/textView3"/>

    <RadioGroup
        android:id="@+id/type"
        android:layout_width="205dp"
        android:layout_height="39dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="69dp"
        android:layout_margin="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView2">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raw Food"
            android:checked="false"/>

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooked"
            android:checked="false"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_marginStart="10dp"
        android:text="Prepare Time"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ptime"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:layout_below="@+id/type"
       android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:hint="Prepared Time "
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textColor="#121111"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/ptime"
        tools:layout_editor_absoluteX="25dp" />

    <EditText
        android:id="@+id/namef"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginStart="33dp"
        android:hint="Name of Food"
        android:layout_below="@+id/ptime"
        android:layout_toEndOf="@+id/textView6"
         />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logistic Type"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
       android:layout_marginLeft="10dp"
        android:layout_below="@+id/namef"
        tools:layout_editor_absoluteX="26dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:layout_below="@+id/namef"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView7"
        android:id="@+id/ltype">

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bicycle" />

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Bike" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Van" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ltype"

        android:layout_marginLeft="10dp"
        android:text="Address(Location)"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="363dp"
        android:layout_height="38dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Location"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView8"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Quantity"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/qty"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="60dp"
        android:hint="Pcs, Kgs"
        android:layout_below="@+id/address"
        android:layout_toEndOf="@+id/textView5"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qty"
        android:layout_marginStart="10dp"
        android:text="Contact No"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="218dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginStart="35dp"
        android:hint="Mobile No"
        android:layout_below="@+id/qty"
        android:layout_toEndOf="@+id/textView9"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_margin="10dp"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/phone"/>

    <EditText
        android:id="@+id/desc"
        android:layout_width="371dp"
        android:layout_height="41dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:hint="Requirement"
        android:layout_below="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Pic"
        android:textColor="#121111"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/desc" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="184dp"
        android:layout_height="151dp"
        android:layout_below="@+id/desc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/textView11"
        app:srcCompat="@drawable/abc" />

    <Button
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/img"
        android:text="Choose" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/choose"
        android:layout_toEndOf="@+id/img"
        android:text="Save" />


</RelativeLayout>